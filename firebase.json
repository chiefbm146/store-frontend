{
  "hosting": [
    {
      "target": "reconciliation-storefront",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/chat",
          "function": "deviceRouter"
        },
        {
          "source": "/infinite-story",
          "function": "deviceRouter"
        },
        {
          "source": "/podcasts",
          "function": "deviceRouter"
        },
        {
          "source": "/world",
          "function": "deviceRouter"
        },
        {
          "source": "/downloads",
          "function": "deviceRouter"
        },
        {
          "source": "/custom-creations",
          "function": "deviceRouter"
        },
        {
          "source": "/workshop-detail",
          "function": "deviceRouter"
        },
        {
          "source": "/reconciliation",
          "function": "deviceRouter"
        },
        {
          "source": "/developer",
          "function": "deviceRouter"
        },
        {
          "source": "/Account",
          "function": "deviceRouter"
        },
        {
          "source": "/menu",
          "function": "deviceRouter"
        },
        {
          "source": "/shona",
          "function": "deviceRouter"
        },
        {
          "source": "/moon-tide",
          "function": "deviceRouter"
        },
        {
          "source": "/contact",
          "function": "deviceRouter"
        },
        {
          "source": "/delete-data",
          "function": "deviceRouter"
        },
        {
          "source": "/workshop-list",
          "function": "deviceRouter"
        },
        {
          "source": "/workshops",
          "function": "deviceRouter"
        },
        {
          "source": "/**",
          "destination": "/index.html"
        }
      ],
      "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate, max-age=0, s-maxage=0"
          },
          {
            "key": "Pragma",
            "value": "no-cache"
          },
          {
            "key": "Expires",
            "value": "0"
          }
        ]
      },
      {
        "source": "**/*.png",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/png"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=2592000, s-maxage=2592000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/jpeg"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=2592000, s-maxage=2592000"
          }
        ]
      },
      {
        "source": "**/*.gif",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/gif"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=2592000, s-maxage=2592000"
          }
        ]
      },
      {
        "source": "**/*.svg",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/svg+xml"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=2592000, s-maxage=2592000"
          }
        ]
      },
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate, max-age=0, s-maxage=0"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' data: https://cdnjs.cloudflare.com; connect-src 'self' https:; frame-ancestors 'none';"
          }
        ]
      }
    ]
    }
  ],
  "functions": [
    {
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ],
      "source": "functions",
      "runtime": "nodejs20"
    }
  ],
  "firestore": {
    "database": "(default)",
    "location": "us-central1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
